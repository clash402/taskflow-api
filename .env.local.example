# App
APP_NAME=taskflow-api
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8000

# Storage
DATABASE_URL=sqlite:///./data/taskflow.db

# LLM provider routing
LLM_PROVIDER=mock
LLM_CHEAP_MODEL=mock-cheap
LLM_DEFAULT_MODEL=mock-default
LLM_EXPENSIVE_MODEL=mock-expensive

# Provider keys (required only when using real providers)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Optional cost rates (USD per 1K tokens)
LLM_CHEAP_PROMPT_PER_1K=0.0001
LLM_CHEAP_COMPLETION_PER_1K=0.0002
LLM_DEFAULT_PROMPT_PER_1K=0.0005
LLM_DEFAULT_COMPLETION_PER_1K=0.001
LLM_EXPENSIVE_PROMPT_PER_1K=0.002
LLM_EXPENSIVE_COMPLETION_PER_1K=0.004
